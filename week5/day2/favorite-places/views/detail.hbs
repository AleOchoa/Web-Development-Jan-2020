<section class="form__section">

  <div class="card" style="width: 80%; height: auto">
    <div class="card-image" style="width: 100%; height: 360px" id="mapDetail">
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4">{{name}}</p>
          <p class="subtitle is-6">Author: {{author}}</p>
        </div>
      </div>
      <div class="content">
        <span class="tag is-info">{{placeType}}</span>
        <br>
        <br>
        {{location.address}}
      </div>
    </div>
  </div>

</section>


<script>
  mapboxgl.accessToken =
    'pk.eyJ1IjoiZGl1cml2aiIsImEiOiJjanAxdjA2cTQwMGp1M2tvYzZmZGp3bWc3In0.4cZEyLkU2ikqx_wb4A1z8A'
  const map = new mapboxgl.Map({
    container: 'mapDetail',
    style: 'mapbox://styles/mapbox/streets-v11',
    zoom: 15,
    center: [{{ location.coordinates }}]
  })

  const popup = new mapboxgl.Popup({ offset: 15 }).setText('Visit page');

  const el = document.createElement('a');
  el.href = 'http://google.com'
  el.target = '_blank'
  el.id = 'marker';

  // create the marker
  new mapboxgl.Marker(el)
    .setLngLat([{{ location.coordinates }}])
    .setPopup(popup)
    .addTo(map)



</script>